<!DOCTYPE html>
<html lang="en">

<%- include('partials/header') %>
<link href="/slick.css" rel="stylesheet">

</head>

<body class="ms-body ms-aside ms-primary-theme ">


 
  <!-- Main Content -->
  <main class="body-content">

    <%- include('partials/navbar') %>
    
    
    
    <!-- Products -->
    <div class="container text-center">
      
       
          <div class="ms-content-wrapper box " >
            <div class="ms-panel-body">
      
              <div id="arrowSlider" class="ms-arrow-slider carousel slide " data-ride="carousel" data-interval="false">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="d-block w-100 " src="https://res.cloudinary.com/dogrnnt96/image/upload/v1667026221/cld-sample-3.jpg" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="https://via.placeholder.com/530x240" alt="Second slide">
                                        <div class="carousel-caption d-none d-md-block">
                    </div>
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="https://via.placeholder.com/530x240" alt="Third slide">
                                        <div class="carousel-caption d-none d-md-block">
                    </div>
                  </div>
                </div>
                <a class="carousel-control-prev" href="#arrowSlider" role="button" data-slide="prev">
                  <span class="material-icons" aria-hidden="true">keyboard_arrow_left</span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#arrowSlider" role="button" data-slide="next">
                  <span class="material-icons" aria-hidden="true">keyboard_arrow_right</span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 mr-4">
              <h4 class="text-center mt-4 font-weight-bold ">Products  <a class="float-right pt-2 "href="/product">See All ></a></h2>
               
              <hr>
            </div>
          </div>
          <div class="row">
        
        

            <% for(var i=0; i<products.length; i++){ %>
              <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="ms-card">
                  <div class="ms-card-img">
                    <img src="<%=products[i].product_image%>" width="530" height="240" alt="card_img">
                  </div>
                  <div class="ms-card-body ">
                    <div class="wrapper-new2">
                      <h6><%=products[i].product_name%></h6>
                      <span class="white">$<%=products[i].product_price%> </span>
                    </div>
                    <div class="wrapper-new1">
                      <span>Category : <%=products[i].category%></span>
      
                    </div>
                    <a href="/product/<%=products[i].product_id%>" class="btn btn-primary btn-block">See More</a>
                  </div>
                </div>
              </div>
            <% } %>
           
            <div class="col-xl-12 col-md-12 text-center">
              <% if (page > 1) { %>
                <a href="/product/pages/<%=parseInt(page) - parseInt(1) %>" class="btn btn-secondary">Previous</a>
                <a href="/product/pages/<%= parseInt(page) + parseInt(1) %>" class="btn btn-secondary">Next</a>
              <% } %>
           
              <% if (page == 1) { %>
              <div class="load pb-4">
                <a href="/product/pages/2" class="btn btn-secondary">Load More</a>
              
              </div>
              <% } %>
            </div>
          </div>



  </main>




</body>

  <!-- SCRIPTS -->
  <!-- Global Required Scripts Start -->
  <script src="/jquery-3.3.1.min.js"></script>
  <script src="/popper.min.js"></script>
  <script src="/bootstrap.min.js"></script>
  <script src="/perfect-scrollbar.js"> </script>
  <script src="/jquery-ui.min.js"> </script>


</body>

</html>
